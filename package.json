  },
  "homepage": "https://github.com/Antonio7098/24-hour-testers#readme",
  "dependencies": {
    "@ucp-js/sdk": "^0.1.0",
    "ucp": "^0.0.0",
    "ucp-content": "^0.1.10"
  }
}
